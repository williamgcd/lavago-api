# LavaGo API Environment Variables Template
# Copy this file to .env.local for local development
# For Vercel deployment, add these variables in your Vercel dashboard

# Application Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database Configuration (Turso)
TURSO_DATABASE_URL=your_turso_database_url_here
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Database Configuration (Supabase - optional)
SUPABASE_DATABASE_URL=your_supabase_database_url_here
SUPABASE_DATABASE_AUTH_TOKEN=your_supabase_auth_token_here

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Payment Configuration (PagBank)
PAGBANK_API_KEY=your_pagbank_api_key_here
PAGBANK_BASE_URL=https://sandbox.api.pagseguro.com
PAGBANK_WEBHOOK_SECRET=your_pagbank_webhook_secret_here

# JWT Configuration (if using JWT for authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# CORS Configuration (optional)
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com

# Rate Limiting Configuration (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 