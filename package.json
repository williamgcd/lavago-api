{
  "name": "api",
  "version": "0.0.1-alpha",
  "description": "LAVAGO API",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun run dist/index.js",
    "- BUILD -------------------------------": "",
    "build": "bun run build:clean & bun build src/index.ts --outdir dist --target node",
    "build:clean": "rm -rf dist",
    "build:watch": "bun build src/index.ts --outdir dist --target node --watch",
    "- DATABASE -----------------------------": "",
    "db:bootstrap": "bun run scripts/bootstrap-db.ts",
    "- DOCKER -------------------------------": "",
    "docker:build": "docker build -t lavago-api .",
    "docker:run": "docker run -p 3000:3000 lavago-api",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "- DOCS ---------------------------------": "",
    "docs:generate": "bun run typedoc --out docs src",
    "docs:serve": "bun run typedoc --serve docs",
    "- FORMAT -------------------------------": "",
    "lint": "bun run prettier --check .",
    "lint:fix": "bun run prettier --write .",
    "- TESTS --------------------------------": "",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "- TYPESCRIPT ---------------------------": "",
    "types:analyze": "bun run tsc --project tsconfig.json --noEmit --listFiles",
    "types:check": "bun run tsc --project tsconfig.json --noEmit",
    "": ""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
